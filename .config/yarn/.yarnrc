# Yarn configuration file
# This ensures consistent behavior across different environments

# Enable flat mode for better performance
flat false

# Network timeout
network-timeout 300000

# Registry settings
registry "https://registry.yarnpkg.com"

# Ignore engine compatibility warnings for specific packages
ignore-engines true

# Enable progress bars
progress-bar true

# Prefer offline packages when available
prefer-offline false

# Save prefix for new packages
save-prefix "^"
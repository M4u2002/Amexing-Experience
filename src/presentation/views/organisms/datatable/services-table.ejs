        // Function to save all client prices
        async function saveAllClientPrices() {
            const serviceId = document.getElementById('modalServiceId').value;
            const clientPrices = [];

            // Get client ID from the page context (assuming it's available in the URL or as a data attribute)
            let clientId = null;
            
            // Try to get client ID from URL
            const urlParams = new URLSearchParams(window.location.pathname.split('/').slice(-1)[0]);
            const pathSegments = window.location.pathname.split('/');
            if (pathSegments.includes('clients') && pathSegments.length > pathSegments.indexOf('clients') + 1) {
                clientId = pathSegments[pathSegments.indexOf('clients') + 1];
            }
            
            // If not found in URL, try to get from a data attribute (if available)
            if (!clientId) {
                const clientElement = document.querySelector('[data-client-id]');
                if (clientElement) {
                    clientId = clientElement.dataset.clientId;
                }
            }

            if (!clientId) {
                console.error('Error: No se pudo identificar el cliente. Por favor, recarga la p√°gina.');
                
                // Show error notification if available
                if (window.showNotification) {
                    window.showNotification('error', 'Error: No se pudo identificar el cliente. Por favor, recarga la p√°gina.');
                }
                
                // Restore button state
                const saveButton = document.querySelector('#serviceClientPricingModal .btn-primary');
                if (saveButton) {
                    saveButton.disabled = false;
                }
                return;
            }

            // Collect all client prices from the form
            document.querySelectorAll('.client-price-input').forEach(input => {
                const rateId = input.dataset.rateId;
                const vehicleTypeId = input.dataset.vehicleTypeId;
                const rateName = input.dataset.rateName;
                const vehicleName = input.dataset.vehicleName;
                const price = parseFloat(input.value) || 0;
                
                // Get base price from data attribute
                const basePrice = parseFloat(input.dataset.basePrice) || 0;

                // Only add prices that are different from base price
                if (price > 0 && price !== basePrice) {
                    clientPrices.push({
                        ratePtr: rateId,
                        vehiclePtr: vehicleTypeId,
                        precio: price,
                        basePrice: basePrice,
                        rateName: rateName,
                        vehicleName: vehicleName
                    });
                }
            });

            if (clientPrices.length === 0) {
                // Show warning in console instead of alert
                console.warn('No hay cambios en los precios. Ingresa precios diferentes a los precios base.');
                
                // Show notification if available
                if (window.showNotification) {
                    window.showNotification('warning', 'No hay cambios en los precios. Ingresa precios diferentes a los precios base.');
                }
                
                // Restore button state
                saveButton.disabled = false;
                return;
            }

            console.log('Saving client prices:', {
                clientId: clientId,
                serviceId: serviceId,
                prices: clientPrices
            });

            // Show loading state
            const saveButton = document.querySelector('#serviceClientPricingModal .btn-primary');
            const originalText = saveButton.innerHTML;
            saveButton.disabled = true;
            saveButton.innerHTML = '<i class="ti ti-loader-2 me-1 spinner-border spinner-border-sm"></i>Guardando...';

            try {
                // Save client prices using API
                const response = await fetch('/api/services/client-prices', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('accessToken') || ''}`
                    },
                    body: JSON.stringify({
                        clientId: clientId,
                        serviceId: serviceId,
                        prices: clientPrices
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Error al guardar los precios');
                }

                const result = await response.json();

                // Show success message
                const totalPrices = clientPrices.length;
                const pricesList = clientPrices.map(p => 
                    `${p.vehicleName} (${p.rateName}): ${new Intl.NumberFormat('es-MX', { 
                        style: 'currency', 
                        currency: 'MXN' 
                    }).format(p.precio)}`
                ).join('\n');
                
                // Show success notification if available (no alerts)
                if (window.showNotification) {
                    window.showNotification('success', result.message || `Se guardaron ${totalPrices} precio(s) personalizados para este servicio.`);
                }
                
                // Log success for debugging
                console.log('‚úÖ Client prices saved:', result.message || 'Precios guardados exitosamente');

                // Close modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('serviceClientPricingModal'));
                if (modal) {
                    modal.hide();
                }

                // Refresh the table to show updated prices immediately
                try {
                    if (window.servicesDataTable) {
                        console.log('üîÑ Refreshing client-side table data...');
                        
                        // For client-side DataTables, we need to reload the data from the API
                        // and then update the table
                        
                        // Call the initializeTable function to reload all data
                        if (typeof window.initializeTable === 'function') {
                            await window.initializeTable();
                            console.log('‚úÖ Table data reloaded and refreshed successfully.');
                        } else if (typeof initializeTable === 'function') {
                            await initializeTable();
                            console.log('‚úÖ Table data reloaded and refreshed successfully.');
                        } else {
                            // Fallback: Simple page reload if functions not available
                            console.log('üîÑ Functions not available, performing simple refresh...');
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        }
                    } else {
                        console.log('‚ö†Ô∏è DataTable instance not found. Prices saved but table not refreshed.');
                    }
                } catch (refreshError) {
                    console.warn('‚ö†Ô∏è Error refreshing table:', refreshError.message, '- Prices saved successfully but table not refreshed.');
                }

            } catch (error) {
                console.error('Error saving client prices:', error);
                
                // Show error message if notification system is available
                if (window.showNotification) {
                    window.showNotification('error', 'Error al guardar los precios: ' + error.message);
                }
                
                // Log error for debugging
                console.error('‚ùå Error saving prices:', error.message);
            } finally {
                // Restore button state
                saveButton.disabled = false;
                saveButton.innerHTML = originalText;
            }
        }
        
        // Store the function in window scope for modal access
        window._saveAllClientPrices = saveAllClientPrices;
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initWhenReady);
    } else {
        initWhenReady();
    }
    
    // Attach event listener after DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const saveBtn = document.getElementById('saveClientPricesBtn');
                if (saveBtn && window._saveAllClientPrices) {

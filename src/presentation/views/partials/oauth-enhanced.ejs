<!--
OAuth Enhanced Partial - Sprint 04
Enhanced OAuth integration for landing pages
Supports corporate branding, department selection, and mobile optimization
-->

<div style="max-width: 400px; margin: 0 auto;">
    <h2 style="text-align: center; color: #667eea; margin-bottom: 2rem;">
        <%= title || 'Sign In' %>
    </h2>
    
    <!-- Error Display -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
            <%= error %>
        </div>
    <% } %>
    
    <!-- Success Message -->
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>

    <!-- Corporate Branding Section -->
    <% if (typeof corporateConfig !== 'undefined' && corporateConfig) { %>
        <div class="corporate-branding" style="text-align: center; margin-bottom: 2rem; padding: 1rem; border-radius: 8px; background: rgba(102, 126, 234, 0.05);">
            <% if (corporateConfig.logo) { %>
                <img src="<%= corporateConfig.logo %>" 
                     alt="<%= corporateConfig.name %> Logo" 
                     class="corporate-logo" 
                     style="max-height: 60px; max-width: 200px; margin-bottom: 1rem;">
            <% } %>
            
            <% if (corporateConfig.welcomeMessage) { %>
                <p class="welcome-message" style="color: #333; font-size: 1rem; margin: 0; line-height: 1.5;">
                    <%= corporateConfig.welcomeMessage %>
                </p>
            <% } %>
        </div>
    <% } %>

    <!-- Department Selection (if required) -->
    <% if (typeof departmentRequired !== 'undefined' && departmentRequired && typeof departments !== 'undefined' && departments) { %>
        <div class="department-selector" style="margin-bottom: 1.5rem;">
            <label for="department-select" style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 500;">
                Select your department:
            </label>
            <select id="department-select" 
                    name="department" 
                    required
                    style="width: 100%; padding: 0.75rem; border: 2px solid #ddd; border-radius: 6px; font-size: 1rem; background: white;">
                <option value="">Choose department...</option>
                <% Object.entries(departments).forEach(([key, dept]) => { %>
                    <option value="<%= key %>"><%= dept.displayName || key %></option>
                <% }); %>
            </select>
        </div>
    <% } %>

    <!-- OAuth Provider Container -->
    <div id="oauth-container" 
         data-auto-init="true"
         <% var oauthConfig = {
             corporateMode: typeof corporateConfig !== "undefined" && corporateConfig ? true : false,
             corporateConfig: typeof corporateConfig !== "undefined" ? corporateConfig : null,
             departmentRequired: typeof departmentRequired !== "undefined" ? departmentRequired : false,
             allowedProviders: typeof allowedProviders !== "undefined" ? allowedProviders : ["google", "microsoft", "apple"],
             mobile: typeof mobile !== "undefined" ? mobile : false,
             theme: typeof theme !== "undefined" ? theme : "default"
         }; %>
         data-config='<%= JSON.stringify(oauthConfig).replace(/'/g, '&apos;') %>'
         style="margin-bottom: 1.5rem;">
        
        <!-- Enhanced OAuth Providers Section -->
        <% if (typeof oauthProviders !== 'undefined' && oauthProviders && oauthProviders.length > 0) { %>
            <div style="border-top: 1px solid #ddd; padding-top: 1.5rem; margin: 1.5rem 0;">
                <p style="text-align: center; color: #666; margin-bottom: 1rem; font-weight: 500;">
                    Sign in with your account
                </p>
                
                <!-- Smart Provider Selection -->
                <% if (typeof intelligentSelection !== 'undefined' && intelligentSelection) { %>
                    <div class="provider-suggestion" style="margin-bottom: 1rem; padding: 0.75rem; background: #f8fcff; border-left: 4px solid #667eea; border-radius: 0 6px 6px 0;">
                        <p style="margin: 0; font-size: 0.875rem; color: #333;">
                            <strong>Tip:</strong> We can detect your organization's preferred sign-in method based on your email domain.
                        </p>
                    </div>
                <% } %>
                
                <!-- OAuth Provider Buttons -->
                <%
                var providerStyles = {
                    google: { border: '#db4437', bg: 'linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%)' },
                    microsoft: { border: '#0078d4', bg: 'linear-gradient(135deg, #ffffff 0%, #f8fcff 100%)' },
                    apple: { border: '#000', bg: 'linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%)' }
                };
                %>
                <% oauthProviders.forEach((provider, index) => { %>
                    <% var style = providerStyles[provider.name] || providerStyles.google; %>
                    
                    <button type="button"
                            class="oauth-btn oauth-<%= provider.name %>"
                            data-provider="<%= provider.name %>"
                            onclick="authenticateWithProvider('<%= provider.name %>')"
                            style="display: block; width: 100%; margin-bottom: 0.75rem; padding: 0.875rem 1rem 0.875rem 3rem; border: 2px solid <%= style.border %>; border-radius: 6px; background: <%= style.bg %>; color: #333; font-size: 1rem; font-weight: 500; text-align: left; text-decoration: none; cursor: pointer; transition: all 0.3s ease; position: relative; overflow: hidden;"
                            onmouseover="this.style.transform='translateY(-1px)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)'"
                            onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'"
                            onfocus="this.style.outline='none'; this.style.boxShadow='0 0 0 3px rgba(102, 126, 234, 0.3)'"
                            onblur="this.style.boxShadow='none'">
                        
                        <!-- Provider Icon -->
                        <span style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); width: 20px; height: 20px; background-image: url('<%= style.icon %>'); background-size: contain; background-repeat: no-repeat;"></span>
                        
                        Continue with <%= provider.displayName %>
                        
                        <!-- Recommended Badge (will be shown via JavaScript) -->
                        <span class="recommended-badge" style="display: none; position: absolute; top: -8px; right: 8px; background: #667eea; color: white; font-size: 0.75rem; padding: 0.25rem 0.5rem; border-radius: 4px; font-weight: 500;">
                            Recommended
                        </span>
                    </button>
                <% }); %>
            </div>
        <% } %>
    </div>

    <!-- Traditional Login Form (fallback) -->
    <div class="traditional-login" style="border-top: 1px solid #ddd; padding-top: 1.5rem;">
        <p style="text-align: center; color: #666; margin-bottom: 1rem; font-size: 0.875rem;">
            Or sign in with email
        </p>
        
        <form action="/auth/login" method="POST" id="traditional-login-form">
            <input type="hidden" name="csrfToken" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <input type="hidden" name="department" id="selected-department" value="">
            
            <div style="margin-bottom: 1.5rem;">
                <label for="identifier" style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 500;">
                    Email or Username
                </label>
                <input type="text" 
                       id="identifier" 
                       name="identifier" 
                       required
                       placeholder="Enter your email or username"
                       style="width: 100%; padding: 0.75rem; border: 2px solid #ddd; border-radius: 6px; font-size: 1rem; background: white; transition: border-color 0.3s ease, box-shadow 0.3s ease;"
                       onfocus="this.style.borderColor='#667eea'; this.style.boxShadow='0 0 0 3px rgba(102, 126, 234, 0.1)'"
                       onblur="this.style.borderColor='#ddd'; this.style.boxShadow='none'"
                       oninput="detectProviderFromEmail(this.value)">
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label for="password" style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 500;">
                    Password
                </label>
                <input type="password" 
                       id="password" 
                       name="password" 
                       required
                       placeholder="Enter your password"
                       style="width: 100%; padding: 0.75rem; border: 2px solid #ddd; border-radius: 6px; font-size: 1rem; background: white; transition: border-color 0.3s ease, box-shadow 0.3s ease;"
                       onfocus="this.style.borderColor='#667eea'; this.style.boxShadow='0 0 0 3px rgba(102, 126, 234, 0.1)'"
                       onblur="this.style.borderColor='#ddd'; this.style.boxShadow='none'">
            </div>
            
            <button type="submit" 
                    class="btn" 
                    style="width: 100%; margin-bottom: 1rem; padding: 0.875rem; background: #667eea; color: white; border: none; border-radius: 6px; font-size: 1rem; font-weight: 500; cursor: pointer; transition: background 0.3s ease;"
                    onmouseover="this.style.background='#5a67d8'"
                    onmouseout="this.style.background='#667eea'">
                Sign In
            </button>
        </form>
        
        <!-- Additional Links -->
        <div style="text-align: center;">
            <% if (typeof showForgotPassword === 'undefined' || showForgotPassword) { %>
                <p style="margin-bottom: 1rem;">
                    <a href="/auth/forgot-password" 
                       style="color: #667eea; text-decoration: none; font-size: 0.875rem;"
                       onmouseover="this.style.textDecoration='underline'"
                       onmouseout="this.style.textDecoration='none'">
                        Forgot your password?
                    </a>
                </p>
            <% } %>
            
            <% if (typeof showRegister === 'undefined' || showRegister) { %>
                <p style="color: #666; font-size: 0.875rem;">
                    Don't have an account? 
                    <a href="/register" 
                       style="color: #667eea; text-decoration: none;"
                       onmouseover="this.style.textDecoration='underline'"
                       onmouseout="this.style.textDecoration='none'">
                        Create one here
                    </a>
                </p>
            <% } %>
        </div>
    </div>
</div>

<!-- Include OAuth Styles -->
<link rel="stylesheet" href="/css/oauth-styles.css">
<link rel="stylesheet" href="/css/mobile-oauth-styles.css">

<!-- Include OAuth JavaScript -->
<script src="/js/oauth-provider.js"></script>
<script src="/js/corporate-oauth-interface.js" defer></script>
<script src="/js/intelligent-provider-selector.js" defer></script>
<script src="/js/mobile-oauth-optimizer.js" defer></script>
<script src="/js/apple-signin-button.js" defer></script>

<!-- Enhanced JavaScript for OAuth functionality -->
<script>
(function() {
    'use strict';
    
    // Global OAuth functions
    window.authenticateWithProvider = function(provider) {
        const button = document.querySelector(`.oauth-${provider}`);
        if (!button) return;
        
        // Show loading state
        button.style.color = 'transparent';
        button.style.position = 'relative';
        button.innerHTML += '<span style="position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); width: 20px; height: 20px; border: 2px solid #ddd; border-top: 2px solid #667eea; border-radius: 50%; animation: spin 1s linear infinite;"></span>';
        button.disabled = true;
        
        // Get selected department if required
        const departmentSelect = document.getElementById('department-select');
        const selectedDepartment = departmentSelect ? departmentSelect.value : null;
        
        // Trigger OAuth Provider authentication
        if (window.OAuthProvider && window.oauthProviderInstance) {
            window.oauthProviderInstance.authenticateWithProvider(provider)
                .catch(error => {
                    console.error('OAuth authentication failed:', error);
                    resetButton(button, provider);
                    showError(error.message);
                });
        } else {
            // Fallback to traditional OAuth flow
            const params = new URLSearchParams();
            if (selectedDepartment) {
                params.append('department', selectedDepartment);
            }
            
            const url = `/auth/oauth/${provider}${params.toString() ? '?' + params.toString() : ''}`;
            window.location.href = url;
        }
    };
    
    function resetButton(button, provider) {
        button.disabled = false;
        button.style.color = '#333';
        button.innerHTML = `
            <span style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); width: 20px; height: 20px; background-image: url('${getProviderIcon(provider)}'); background-size: contain; background-repeat: no-repeat;"></span>
            Continue with ${getProviderDisplayName(provider)}
            <span class="recommended-badge" style="display: none; position: absolute; top: -8px; right: 8px; background: #667eea; color: white; font-size: 0.75rem; padding: 0.25rem 0.5rem; border-radius: 4px; font-weight: 500;">
                Recommended
            </span>
        `;
    }
    
    function getProviderIcon(provider) {
        const icons = {
            google: "data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23db4437' d='M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z'/%3E%3Cpath fill='%230f9d58' d='M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z'/%3E%3Cpath fill='%23ffbc05' d='M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z'/%3E%3Cpath fill='%23ea4335' d='M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z'/%3E%3C/svg%3E",
            microsoft: "data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23f35325' d='M1 1h10v10H1z'/%3E%3Cpath fill='%2381bc06' d='M12 1h10v10H12z'/%3E%3Cpath fill='%2305a6f0' d='M1 12h10v10H1z'/%3E%3Cpath fill='%23ffba08' d='M12 12h10v10H12z'/%3E%3C/svg%3E",
            apple: "data:image/svg+xml,%3Csvg width='18' height='20' viewBox='0 0 814 1000' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23000' d='M788.1 340.9c-5.8 4.5-108.2 62.2-108.2 190.5 0 148.4 130.3 201.9 134.2 202.2-.6 3.2-20.7 71.9-68.7 141.9-42.8 61.6-87.5 123.1-155.5 123.1s-85.5-39.5-164-39.5c-76.5 0-103.7 40.8-165.9 40.8s-105.6-57-155.5-127C46.7 790.7 0 663 0 541.8c0-194.4 126.4-297.5 250.8-297.5 65.6 0 120.5 43.9 162.2 43.9 40.8 0 101.2-46.4 175.8-46.4 28.5 0 130.9 2.6 198.3 99.2zm-234-181.5c31.1-36.9 53.1-88.1 53.1-139.3 0-7.1-.6-14.3-1.9-20.1-50.6 1.9-110.8 33.7-147.1 75.8-28.5 32.4-55.1 83.6-55.1 135.5 0 7.8 1.3 15.6 1.9 18.1 3.2.6 8.4 1.3 13.6 1.3 45.4 0 102.5-30.4 135.5-71.3z'/%3E%3C/svg%3E"
        };
        return icons[provider] || icons.google;
    }
    
    function getProviderDisplayName(provider) {
        const names = { google: 'Google', microsoft: 'Microsoft', apple: 'Apple' };
        return names[provider] || provider;
    }
    
    function showError(message) {
        const container = document.getElementById('oauth-container');
        if (!container) return;
        
        const existingErrors = container.querySelectorAll('.oauth-error');
        existingErrors.forEach(error => error.remove());
        
        const errorDiv = document.createElement('div');
        errorDiv.className = 'oauth-error alert alert-error';
        errorDiv.style.cssText = 'padding: 1rem; margin-bottom: 1rem; border-radius: 6px; background: #fee; border: 1px solid #fcc; color: #c33; font-size: 0.875rem; line-height: 1.4;';
        errorDiv.textContent = message;
        
        container.insertBefore(errorDiv, container.firstChild);
        
        setTimeout(() => {
            if (errorDiv.parentNode) errorDiv.remove();
        }, 5000);
    }
    
    // Email domain detection for provider suggestion
    window.detectProviderFromEmail = function(email) {
        if (!email.includes('@')) return;
        
        const domain = email.split('@')[1].toLowerCase();
        let suggestedProvider = null;
        
        // Corporate domain mapping (if available)
        <% if (typeof corporateConfig !== 'undefined' && corporateConfig && corporateConfig.domainMappings) { %>
            const corporateMappings = <%= JSON.stringify(corporateConfig.domainMappings) %>;
            if (corporateMappings[domain]) {
                suggestedProvider = corporateMappings[domain];
            }
        <% } %>
        
        // Common domain detection
        if (!suggestedProvider) {
            if (domain.includes('gmail.com') || domain.includes('google.com')) {
                suggestedProvider = 'google';
            } else if (domain.includes('outlook.com') || domain.includes('hotmail.com') || domain.includes('microsoft.com')) {
                suggestedProvider = 'microsoft';
            } else if (domain.includes('icloud.com') || domain.includes('apple.com')) {
                suggestedProvider = 'apple';
            }
        }
        
        highlightSuggestedProvider(suggestedProvider);
    };
    
    function highlightSuggestedProvider(provider) {
        // Remove existing highlights
        const buttons = document.querySelectorAll('.oauth-btn');
        buttons.forEach(btn => {
            btn.classList.remove('suggested');
            const badge = btn.querySelector('.recommended-badge');
            if (badge) badge.style.display = 'none';
        });
        
        if (!provider) return;
        
        // Highlight suggested provider
        const suggestedButton = document.querySelector(`.oauth-${provider}`);
        if (suggestedButton) {
            suggestedButton.classList.add('suggested');
            const badge = suggestedButton.querySelector('.recommended-badge');
            if (badge) badge.style.display = 'block';
        }
    }
    
    // Department selection handling
    const departmentSelect = document.getElementById('department-select');
    const selectedDepartmentInput = document.getElementById('selected-department');
    
    if (departmentSelect && selectedDepartmentInput) {
        departmentSelect.addEventListener('change', function() {
            selectedDepartmentInput.value = this.value;
            
            // Trigger custom event for OAuth Provider
            const event = new CustomEvent('departmentChanged', {
                detail: { department: this.value }
            });
            document.dispatchEvent(event);
        });
    }
    
    // Initialize Mobile OAuth Optimizer when available
    if (typeof MobileOAuthOptimizer !== 'undefined') {
        const mobileOptimizer = new MobileOAuthOptimizer({
            touchDelay: 300,
            fastTapThreshold: 200,
            vibrationEnabled: true,
            adaptiveLoading: true,
            biometricSupport: true,
            orientationAware: true
        });
        
        // Store optimizer for later use
        window.oauthMobileOptimizer = mobileOptimizer;
    }
    
    // CSS animations keyframes
    const style = document.createElement('style');
    style.textContent = `
        @keyframes spin {
            0% { transform: translate(-50%, -50%) rotate(0deg); }
            100% { transform: translate(-50%, -50%) rotate(360deg); }
        }
    `;
    document.head.appendChild(style);
    
})();
</script>
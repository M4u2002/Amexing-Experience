<%
/**
 * Forgot Password Form Molecule
 * Complete forgot password form with email validation and user guidance
 *
 * @param {string} error - Error message to display (optional)
 * @param {string} success - Success message to display (optional)
 * @param {string} csrfToken - CSRF token for form security
 * @param {string} email - Pre-filled email (optional)
 * @param {boolean} showBackToLogin - Whether to show back to login link
 */

// Default parameters
const forgotError = typeof error !== 'undefined' ? error : '';
const forgotSuccess = typeof success !== 'undefined' ? success : '';
const forgotCsrfToken = typeof csrfToken !== 'undefined' ? csrfToken : '';
const forgotEmail = typeof email !== 'undefined' ? email : '';
const forgotShowBackToLogin = typeof showBackToLogin !== 'undefined' ? showBackToLogin : true;
%>

<div class="forgot-password-container">
    <!-- Header -->
    <div class="text-center mb-4">
        <div class="forgot-icon mb-3">
            <i class="ti ti-key fs-1 text-primary"></i>
        </div>
        <h2 class="fw-bold text-dark mb-3">Forgot Password?</h2>
        <p class="text-muted">No worries! Enter your email and we'll send you reset instructions.</p>
    </div>

    <!-- Success Message -->
    <% if (forgotSuccess) { %>
        <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
            <i class="ti ti-circle-check me-2"></i>
            <div><%= forgotSuccess %></div>
        </div>
    <% } %>

    <!-- Error Message -->
    <% if (forgotError) { %>
        <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
            <i class="ti ti-alert-circle me-2"></i>
            <div><%= forgotError %></div>
        </div>
    <% } %>

    <!-- Forgot Password Form -->
    <form action="/auth/forgot-password" method="POST" class="needs-validation" novalidate id="forgotPasswordForm">
        <input type="hidden" name="csrfToken" value="<%= forgotCsrfToken %>">

        <!-- Email Input -->
        <%- include('../../atoms/common/email-input', {
            name: 'email',
            id: 'forgotEmail',
            label: 'Email Address',
            placeholder: 'Enter your email address',
            required: true,
            value: forgotEmail,
            helpText: 'We\'ll send password reset instructions to this email',
            containerClass: 'mb-4'
        }) %>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-lg w-100 mb-4" id="submitBtn">
            <i class="ti ti-mail-forward me-2"></i>Send Reset Instructions
        </button>
    </form>

    <!-- Help Section -->
    <div class="help-section">
        <!-- FAQ Accordion -->
        <div class="accordion accordion-flush" id="forgotPasswordHelp">
            <div class="accordion-item border-0">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed bg-transparent border-0 text-muted px-0"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#helpCollapse"
                            aria-expanded="false"
                            aria-controls="helpCollapse">
                        <i class="ti ti-help me-2"></i>
                        <small>Need help? Click here</small>
                    </button>
                </h2>
                <div id="helpCollapse" class="accordion-collapse collapse" data-bs-parent="#forgotPasswordHelp">
                    <div class="accordion-body px-0">
                        <div class="help-content">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <h6 class="text-primary mb-2">
                                        <i class="ti ti-clock me-1"></i>Didn't receive the email?
                                    </h6>
                                    <ul class="list-unstyled small text-muted">
                                        <li class="mb-1">• Check your spam/junk folder</li>
                                        <li class="mb-1">• Wait up to 10 minutes for delivery</li>
                                        <li class="mb-1">• Make sure the email address is correct</li>
                                    </ul>
                                </div>
                                <div class="col-12 mb-3">
                                    <h6 class="text-primary mb-2">
                                        <i class="ti ti-shield-lock me-1"></i>Security Notice
                                    </h6>
                                    <p class="small text-muted mb-0">
                                        For security reasons, we don't reveal whether an email is registered in our system.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Login -->
    <% if (forgotShowBackToLogin) { %>
        <div class="text-center mt-4">
            <p class="text-muted mb-0">
                Remember your password?
                <a href="/auth/login" class="text-primary text-decoration-none fw-semibold">
                    <i class="ti ti-arrow-left me-1"></i>Back to Login
                </a>
            </p>
        </div>
    <% } %>

    <!-- Alternative Contact -->
    <div class="text-center mt-4 pt-3 border-top">
        <small class="text-muted">
            Still having trouble?
            <a href="/contact" class="text-primary text-decoration-none">Contact Support</a>
        </small>
    </div>
</div>

<style>
    .forgot-password-container {
        max-width: 440px;
        margin: 0 auto;
    }

    .forgot-icon {
        background: rgba(102, 126, 234, 0.1);
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
    }

    .forgot-icon::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, rgba(102, 126, 234, 0.1), transparent);
        animation: shimmer 2s infinite;
    }

    @keyframes shimmer {
        0% { transform: translateX(-100%) translateY(-100%) rotate(0deg); }
        100% { transform: translateX(100%) translateY(100%) rotate(360deg); }
    }

    .help-section {
        margin: 2rem 0;
        padding: 1rem;
        background: rgba(248, 249, 250, 0.5);
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .accordion-button:focus {
        box-shadow: none;
        border: none;
    }

    .accordion-button:not(.collapsed) {
        background-color: transparent;
        color: #667eea;
        box-shadow: none;
    }

    .help-content {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        border: 1px solid rgba(0,0,0,0.05);
    }

    /* Form Enhancements */
    #forgotPasswordForm .btn:disabled {
        opacity: 0.65;
        cursor: not-allowed;
    }

    .form-floating-enhanced {
        position: relative;
        overflow: hidden;
    }

    .form-floating-enhanced::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
        transition: left 0.6s ease;
        z-index: 1;
    }

    .form-floating-enhanced.focus::before {
        left: 100%;
    }

    /* Success State */
    .forgot-password-container.success .forgot-icon {
        background: rgba(40, 167, 69, 0.1);
    }

    .forgot-password-container.success .forgot-icon i {
        color: #28a745;
    }

    /* Loading State */
    .forgot-password-container.loading #submitBtn {
        position: relative;
        color: transparent;
    }

    .forgot-password-container.loading #submitBtn::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 20px;
        height: 20px;
        border: 2px solid transparent;
        border-top: 2px solid white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    /* Rate Limiting Indicator */
    .rate-limit-notice {
        background: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.3);
        border-radius: 8px;
        padding: 1rem;
        margin: 1rem 0;
        text-align: center;
    }

    .countdown-timer {
        font-weight: bold;
        color: #856404;
        font-family: monospace;
    }

    /* Responsive adjustments */
    @media (max-width: 576px) {
        .forgot-password-container {
            padding: 0 1rem;
        }

        .forgot-icon {
            width: 60px;
            height: 60px;
        }

        .help-content {
            padding: 1rem;
        }
    }

    /* Accessibility improvements */
    @media (prefers-reduced-motion: reduce) {
        .forgot-icon::before,
        .shimmer,
        .form-floating-enhanced::before {
            animation: none;
        }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('forgotPasswordForm');
    const submitBtn = document.getElementById('submitBtn');
    const container = document.querySelector('.forgot-password-container');
    const emailInput = document.getElementById('forgotEmail');

    // Form submission with rate limiting
    let lastSubmitTime = 0;
    const RATE_LIMIT_MS = 60000; // 1 minute

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        e.stopPropagation();

        // Check rate limiting
        const now = Date.now();
        if (now - lastSubmitTime < RATE_LIMIT_MS) {
            showRateLimitNotice(Math.ceil((RATE_LIMIT_MS - (now - lastSubmitTime)) / 1000));
            return;
        }

        if (form.checkValidity()) {
            lastSubmitTime = now;
            submitForm();
        }

        form.classList.add('was-validated');
    });

    function submitForm() {
        // Show loading state
        container.classList.add('loading');
        submitBtn.disabled = true;

        // Simulate form submission (replace with actual submission)
        setTimeout(() => {
            // Success state
            container.classList.remove('loading');
            container.classList.add('success');

            // Show success message
            showSuccessMessage();

            // Reset form
            form.reset();
            form.classList.remove('was-validated');

        }, 2000);

        // Track event

        // Optional analytics
        if (typeof gtag !== 'undefined') {
            gtag('event', 'forgot_password_request', {
                method: 'email'
            });
        }
    }

    function showSuccessMessage() {
        const existingAlert = container.querySelector('.alert-success');
        if (!existingAlert) {
            const alertHtml = `
                <div class="alert alert-success d-flex align-items-center mb-4 success-alert" role="alert">
                    <i class="ti ti-circle-check me-2"></i>
                    <div>
                        <strong>Instructions sent!</strong>
                        Check your email for password reset instructions.
                    </div>
                </div>
            `;

            const formElement = form.parentNode;
            formElement.insertAdjacentHTML('beforebegin', alertHtml);

            // Auto-hide after 10 seconds
            setTimeout(() => {
                const alert = container.querySelector('.success-alert');
                if (alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 10000);
        }
    }

    function showRateLimitNotice(secondsRemaining) {
        const existingNotice = container.querySelector('.rate-limit-notice');
        if (existingNotice) {
            existingNotice.remove();
        }

        const noticeHtml = `
            <div class="rate-limit-notice">
                <i class="ti ti-clock me-2"></i>
                <strong>Please wait</strong><br>
                You can request another reset in <span class="countdown-timer">${secondsRemaining}</span> seconds
            </div>
        `;

        form.insertAdjacentHTML('afterend', noticeHtml);

        // Update countdown
        const countdownEl = container.querySelector('.countdown-timer');
        const countdownInterval = setInterval(() => {
            secondsRemaining--;
            countdownEl.textContent = secondsRemaining;

            if (secondsRemaining <= 0) {
                clearInterval(countdownInterval);
                const notice = container.querySelector('.rate-limit-notice');
                if (notice) notice.remove();
            }
        }, 1000);
    }

    // Enhanced email input handling
    if (emailInput) {
        // Auto-suggest common email domains
        emailInput.addEventListener('input', function() {
            const value = this.value;
            if (value.includes('@') && !value.includes('.')) {
                const commonDomains = ['gmail.com', 'yahoo.com', 'hotmail.com', 'outlook.com'];
                // Could implement auto-suggestion here
            }
        });

        // Enhanced focus effects
        emailInput.addEventListener('focus', function() {
            const wrapper = this.closest('.auth-input-wrapper');
            if (wrapper) {
                wrapper.classList.add('focus');
            }
        });

        emailInput.addEventListener('blur', function() {
            const wrapper = this.closest('.auth-input-wrapper');
            if (wrapper) {
                wrapper.classList.remove('focus');
            }
        });
    }

    // Keyboard shortcuts
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && e.ctrlKey) {
            e.preventDefault();
            form.dispatchEvent(new Event('submit'));
        }
    });

    // Auto-focus email input
    if (emailInput && !emailInput.value) {
        emailInput.focus();
    }

});
</script>
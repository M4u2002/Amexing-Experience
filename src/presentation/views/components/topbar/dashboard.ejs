<header class="app-header">
    <nav class="navbar navbar-expand-lg navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item d-block d-xl-none">
                <a class="nav-link sidebartoggler" id="headerCollapse" href="javascript:void(0)">
                    <i class="ti ti-menu-2"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:void(0)">
                    <i class="ti ti-bell-ringing"></i>
                    <div class="notification bg-primary rounded-circle"></div>
                </a>
            </li>
        </ul>

        <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                <!-- Search -->
                <li class="nav-item">
                    <input type="text" class="form-control" id="global-search" placeholder="Search...">
                </li>

                <!-- Theme Toggle -->
                <li class="nav-item ms-3">
                    <a class="nav-link" href="javascript:void(0)" id="theme-toggle">
                        <i class="ti ti-moon"></i>
                    </a>
                </li>

                <!-- Language Selector -->
                <li class="nav-item dropdown ms-3">
                    <a class="nav-link dropdown-toggle" href="javascript:void(0)" id="language-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/dashboard/images/flags/us.svg" alt="" width="20" height="20" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="language-dropdown">
                        <li><a class="dropdown-item" href="javascript:void(0)">
                            <img src="/dashboard/images/flags/us.svg" alt="" width="20" height="20" class="me-2">
                            English
                        </a></li>
                        <li><a class="dropdown-item" href="javascript:void(0)">
                            <img src="/dashboard/images/flags/es.svg" alt="" width="20" height="20" class="me-2">
                            Espa√±ol
                        </a></li>
                    </ul>
                </li>

                <!-- User Profile -->
                <li class="nav-item dropdown">
                    <a class="nav-link" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/dashboard/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                    </a>
                    <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                        <div class="message-body">
                            <div class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-user fs-6"></i>
                                <p class="mb-0 fs-3">
                                    <%= typeof userName !== 'undefined' ? userName : 'User' %>
                                </p>
                            </div>
                            <div class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-shield-check fs-6"></i>
                                <p class="mb-0 fs-3">
                                    Role: <%= typeof userRole !== 'undefined' ? userRole.replace('_', ' ').charAt(0).toUpperCase() + userRole.slice(1) : 'Guest' %>
                                </p>
                            </div>
                            <hr class="dropdown-divider">
                            <a href="/dashboard/<%= userRole %>/profile" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-user-circle fs-6"></i>
                                <p class="mb-0 fs-3">My Profile</p>
                            </a>
                            <a href="/dashboard/<%= userRole %>/settings" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-settings fs-6"></i>
                                <p class="mb-0 fs-3">Account Settings</p>
                            </a>
                            <% if (userRole === 'client' || userRole === 'department_manager' || userRole === 'employee') { %>
                            <a href="/dashboard/<%= userRole %>/budget" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-wallet fs-6"></i>
                                <p class="mb-0 fs-3">My Budget</p>
                            </a>
                            <% } %>
                            <!-- Driver menu item hidden as per request
                            <% if (userRole === 'driver') { %>
                            <a href="/dashboard/<%= userRole %>/earnings" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-cash fs-6"></i>
                                <p class="mb-0 fs-3">My Earnings</p>
                            </a>
                            <% } %>
                            -->
                            <a href="/dashboard/<%= userRole %>/help" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-help fs-6"></i>
                                <p class="mb-0 fs-3">Help & Support</p>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="/logout" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>
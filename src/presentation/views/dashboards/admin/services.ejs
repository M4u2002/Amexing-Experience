<%
/**
 * Admin Service Management Page
 * Manages transportation service catalog with client-side filtering
 *
 * Layout Structure:
 * - Filter pills for service types
 * - Single datatable with all services
 * - Client-side filtering for better performance
 *
 * Note: DataTables CSS/JS libraries are loaded via controller (pageStyles & footerScripts)
 */

// Page configuration
const currentUserRole = typeof userRole !== 'undefined' ? userRole : 'admin';
%>

<!-- Page Header with Breadcrumb -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h2 class="mb-1 fw-bold">Gesti√≥n de Traslados</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/dashboard/admin" class="text-decoration-none">
                                <i class="ti ti-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <i class="ti ti-briefcase me-1"></i>Traslados
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="row">
    <!-- Content Column - Full Width -->
    <div class="col-12">
        <!-- Unified Services Table with Client-Side Filtering -->
        <%- include('../../organisms/datatable/services-table', {
            tableId: 'all-services-table',
            apiEndpoint: '/api/services',
            userRole: currentUserRole,
            showActions: true
        }) %>
    </div>
</div>

<!-- Page Styles -->
<style>
/* Breadcrumb styles */
.breadcrumb-item a {
    color: #5a6a85;
    text-decoration: none;

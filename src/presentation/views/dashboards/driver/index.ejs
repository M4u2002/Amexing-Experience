<!-- Driver Dashboard -->
<div class="row">
    <!-- Welcome Section -->
    <div class="col-lg-12">
        <div class="card bg-light-warning position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Welcome Driver <%= userName || 'Driver' %>!</h4>
                        <p class="mb-0">You have <%= typeof stats !== 'undefined' ? stats.todayTrips : '8' %> trips scheduled for today</p>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <img src="/dashboard/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row">
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-calendar-event',
            title: 'Today\'s Trips',
            value: typeof stats !== 'undefined' ? stats.todayTrips : '8',
            color: 'warning',
            trend: 'Active',
            trendColor: 'muted'
        }) %>
    </div>
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-route',
            title: 'Weekly Trips',
            value: typeof stats !== 'undefined' ? stats.weeklyTrips : '45',
            color: 'success',
            trend: 'This week',
            trendColor: 'muted'
        }) %>
    </div>
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-cash',
            title: 'Monthly Earnings',
            value: '$' + (typeof stats !== 'undefined' ? stats.monthlyEarnings : '3,500'),
            color: 'primary',
            trend: 'This month',
            trendColor: 'muted'
        }) %>
    </div>
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-star',
            title: 'Rating',
            value: typeof stats !== 'undefined' ? stats.rating : '4.8',
            color: 'info',
            trend: typeof stats !== 'undefined' ? stats.completionRate : '96%' + ' completion',
            trendColor: 'success'
        }) %>
    </div>
</div>

<!-- Main Content -->
<div class="row">
    <!-- Active Trips -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="card-title mb-0">Today's Trips</h5>
                    <span class="badge bg-warning">
                        <%= typeof stats !== 'undefined' ? stats.todayTrips : '8' %> Active
                    </span>
                </div>

                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">Time</th>
                                <th class="border-bottom-0">Route</th>
                                <th class="border-bottom-0">Passenger</th>
                                <th class="border-bottom-0">Status</th>
                                <th class="border-bottom-0">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="border-bottom-0">
                                    <span class="fw-semibold">9:00 AM</span>
                                </td>
                                <td class="border-bottom-0">Office → Airport</td>
                                <td class="border-bottom-0">John Smith</td>
                                <td class="border-bottom-0">
                                    <span class="badge bg-success">In Progress</span>
                                </td>
                                <td class="border-bottom-0">
                                    <button class="btn btn-sm btn-primary">
                                        <i class="ti ti-check"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0">
                                    <span class="fw-semibold">11:30 AM</span>
                                </td>
                                <td class="border-bottom-0">Conference Center → Office</td>
                                <td class="border-bottom-0">Mary Johnson</td>
                                <td class="border-bottom-0">
                                    <span class="badge bg-warning">Upcoming</span>
                                </td>
                                <td class="border-bottom-0">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="ti ti-navigation"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0">
                                    <span class="fw-semibold">2:00 PM</span>
                                </td>
                                <td class="border-bottom-0">Client Site → Office</td>
                                <td class="border-bottom-0">Robert Davis</td>
                                <td class="border-bottom-0">
                                    <span class="badge bg-secondary">Scheduled</span>
                                </td>
                                <td class="border-bottom-0">
                                    <button class="btn btn-sm btn-outline-secondary">
                                        <i class="ti ti-clock"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="text-center mt-3">
                    <a href="/dashboard/driver/trips" class="btn btn-outline-primary">
                        View All Trips
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Vehicle Status -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Quick Actions</h5>
                <div class="d-grid gap-2">
                    <a href="/dashboard/driver/trips" class="btn btn-warning">
                        <i class="ti ti-map-pin me-2"></i>View Active Trips
                    </a>
                    <a href="/dashboard/driver/schedule" class="btn btn-outline-warning">
                        <i class="ti ti-calendar me-2"></i>My Schedule
                    </a>
                    <a href="/dashboard/driver/earnings" class="btn btn-outline-primary">
                        <i class="ti ti-cash me-2"></i>View Earnings
                    </a>
                    <a href="/dashboard/driver/vehicle" class="btn btn-outline-secondary">
                        <i class="ti ti-car me-2"></i>Vehicle Status
                    </a>
                </div>
            </div>
        </div>

        <!-- Vehicle Status -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Vehicle Status</h5>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Fuel Level</span>
                    <span class="fw-semibold text-success">85%</span>
                </div>
                <div class="progress mb-3" style="height: 5px;">
                    <div class="progress-bar bg-success" style="width: 85%;"></div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Engine Status</span>
                    <span class="badge bg-success">Good</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Last Maintenance</span>
                    <span class="text-muted fs-3">2 weeks ago</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Next Service</span>
                    <span class="text-warning fs-3">In 500 miles</span>
                </div>

                <hr class="my-3">

                <h6 class="mb-3">Today's Performance</h6>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Miles Driven</span>
                    <span class="fw-semibold">127 mi</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Fuel Efficiency</span>
                    <span class="fw-semibold text-success">28.5 MPG</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Driving Score</span>
                    <span class="fw-semibold text-primary">94/100</span>
                </div>
            </div>
        </div>
    </div>
</div>
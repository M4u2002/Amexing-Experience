<!-- Client Dashboard -->
<div class="row">
    <!-- Welcome Section -->
    <div class="col-lg-12">
        <div class="card bg-light-info position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Welcome <%= userName || 'Client Administrator' %>!</h4>
                        <p class="mb-0">Manage your corporate transport and employee access</p>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <img src="/dashboard/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row">
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-users',
            title: 'Total Employees',
            value: typeof stats !== 'undefined' ? stats.totalEmployees : '250',
            color: 'info',
            trend: '+5 this month',
            trendColor: 'success'
        }) %>
    </div>
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-sitemap',
            title: 'Departments',
            value: typeof stats !== 'undefined' ? stats.activeDepartments : '8',
            color: 'primary',
            trend: 'Active',
            trendColor: 'muted'
        }) %>
    </div>
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-wallet',
            title: 'Monthly Budget',
            value: '$' + (typeof stats !== 'undefined' ? (stats.monthlyBudget/1000).toFixed(0) : '50') + 'K',
            color: 'success',
            trend: '$' + (typeof stats !== 'undefined' ? (stats.budgetUsed/1000).toFixed(0) : '32') + 'K used',
            trendColor: 'warning'
        }) %>
    </div>
    <div class="col-md-6 col-lg-3">
        <%- include('../../components/cards/stats', {
            icon: 'ti ti-calendar-event',
            title: 'Active Bookings',
            value: typeof stats !== 'undefined' ? stats.activeBookings : '45',
            color: 'warning',
            trend: 'This week',
            trendColor: 'muted'
        }) %>
    </div>
</div>

<!-- Main Content -->
<div class="row">
    <!-- Department Overview -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="card-title mb-0">Department Overview</h5>
                    <a href="/dashboard/client/departments" class="btn btn-sm btn-primary">
                        <i class="ti ti-plus me-1"></i>Add Department
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">Department</th>
                                <th class="border-bottom-0">Employees</th>
                                <th class="border-bottom-0">Budget Used</th>
                                <th class="border-bottom-0">Active Bookings</th>
                                <th class="border-bottom-0">Manager</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="border-bottom-0">
                                    <span class="fw-semibold">Sales</span>
                                </td>
                                <td class="border-bottom-0">45</td>
                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">$8.5K</span>
                                        <div class="progress" style="width: 60px; height: 4px;">
                                            <div class="progress-bar bg-success" style="width: 68%;"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="border-bottom-0">12</td>
                                <td class="border-bottom-0">Sarah Wilson</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0">
                                    <span class="fw-semibold">Marketing</span>
                                </td>
                                <td class="border-bottom-0">32</td>
                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">$6.2K</span>
                                        <div class="progress" style="width: 60px; height: 4px;">
                                            <div class="progress-bar bg-warning" style="width: 82%;"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="border-bottom-0">8</td>
                                <td class="border-bottom-0">Michael Chen</td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0">
                                    <span class="fw-semibold">Engineering</span>
                                </td>
                                <td class="border-bottom-0">87</td>
                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">$12.3K</span>
                                        <div class="progress" style="width: 60px; height: 4px;">
                                            <div class="progress-bar bg-primary" style="width: 56%;"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="border-bottom-0">18</td>
                                <td class="border-bottom-0">David Rodriguez</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Budget Summary -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Quick Actions</h5>
                <div class="d-grid gap-2">
                    <a href="/dashboard/client/employees" class="btn btn-info">
                        <i class="ti ti-users me-2"></i>Manage Employees
                    </a>
                    <a href="/dashboard/client/departments" class="btn btn-outline-info">
                        <i class="ti ti-sitemap me-2"></i>Departments
                    </a>
                    <a href="/dashboard/client/budgets" class="btn btn-outline-primary">
                        <i class="ti ti-wallet me-2"></i>Budget Control
                    </a>
                    <a href="/dashboard/client/reports" class="btn btn-outline-secondary">
                        <i class="ti ti-report-analytics me-2"></i>View Reports
                    </a>
                </div>
            </div>
        </div>

        <!-- Budget Summary -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Budget Summary</h5>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Total Budget</span>
                        <span class="fw-semibold">$<%= typeof stats !== 'undefined' ? (stats.monthlyBudget/1000).toFixed(0) : '50' %>K</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Used</span>
                        <span class="fw-semibold text-warning">$<%= typeof stats !== 'undefined' ? (stats.budgetUsed/1000).toFixed(0) : '32' %>K</span>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-warning" style="width: <%= typeof stats !== 'undefined' ? ((stats.budgetUsed / stats.monthlyBudget) * 100) : '64' %>%;"></div>
                    </div>
                    <p class="text-muted fs-3 mt-2">
                        <%= typeof stats !== 'undefined' ? Math.round((stats.budgetUsed / stats.monthlyBudget) * 100) : '64' %>% of monthly budget used
                    </p>
                </div>

                <hr>

                <h6 class="mb-3">Department Spending</h6>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted fs-3">Engineering</span>
                    <span class="fw-semibold">$12.3K</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted fs-3">Sales</span>
                    <span class="fw-semibold">$8.5K</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted fs-3">Marketing</span>
                    <span class="fw-semibold">$6.2K</span>
                </div>
            </div>
        </div>
    </div>
</div>
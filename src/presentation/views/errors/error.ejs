<%- include('../templates/auth-layout', {
    title: 'Error ' + (typeof status !== 'undefined' ? status : '500') + ' - Amexing',
    page: 'error',
    showAuthHeader: false,
    content: `
        <div class="text-center">
            <div class="error-icon mb-3">
                <i class="ti ti-alert-triangle text-danger" style="font-size: 4rem;"></i>
            </div>
            <h1 class="text-danger mb-3">Error ${typeof status !== 'undefined' ? status : '500'}</h1>
            <h2 class="text-dark mb-3">${typeof title !== 'undefined' ? title : 'Server Error'}</h2>
            <p class="text-muted mb-4">${typeof message !== 'undefined' ? message : 'An unexpected error occurred'}</p>

            ${typeof error !== 'undefined' && error && error.stack ? `
                <div class="error-details text-start mx-auto" style="max-width: 800px;">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">Error Details</h5>
                        <pre class="mb-0" style="font-size: 0.875rem; white-space: pre-wrap;">${error.stack}</pre>
                    </div>
                </div>
            ` : ''}

            <div class="mt-4">
                <a href="/" class="btn btn-primary me-2">
                    <i class="ti ti-home me-2"></i>Go to Homepage
                </a>
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left me-2"></i>Go Back
                </a>
            </div>
        </div>
    `
}) %>